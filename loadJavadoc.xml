<?xml version="1.0" encoding="utf-8" ?>
<project name="Charba" default="loadJavadoc" basedir="." xmlns:ivy="antlib:org.apache.ivy.ant">

	<property name="javadoc.dir" value="javadoc" />
	<property name="javadoc.version" value="1.7" />
	<property name="javadoc.file" value="charba-${javadoc.version}-javadoc.jar" />

	<target name="loadJavadoc">
		<mkdir dir="${javadoc.dir}"/>
		<get src="https://repo1.maven.org/maven2/org/pepstock/charba/${javadoc.version}/${javadoc.file}" dest="${javadoc.dir}/${javadoc.file}" />
		<unzip src="${javadoc.dir}/${javadoc.file}" dest="${javadoc.dir}"/>
		<delete file="${javadoc.dir}/${javadoc.file}"/>
		<replace dir="${javadoc.dir}" value="&lt;head&gt;&lt;script&gt;window.ga=window.ga||function(){(ga.q=ga.q||[]).push(arguments)};ga.l=+new Date;ga('create', 'UA-46259978-1', 'auto');ga('send', 'pageview');&lt;/script&gt;&lt;script async src='https://www.google-analytics.com/analytics.js'&gt;&lt;/script&gt;">
		  <include name="**/*.html"/>
		  <replacetoken><![CDATA[<head>]]></replacetoken>
		</replace>
	</target>

</project>